  <style>
    /* Estilos generales */
    * {
      margin: 0;
      padding: 0;
      box-sizing: border-box;
      font-family: Arial, sans-serif;
    }

    body {
      display: flex;
      justify-content: center;
      align-items: center;
      min-height: 100vh;
      background: linear-gradient(135deg, #6e85b7, #b9c2d8);
      color: #fff;
    }

    /* Contenedor de video */
    #video-grid {
      display: grid;
      grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
      gap: 15px;
      padding: 20px;
      width: 90%;
      max-width: 1200px;
      background: rgba(0, 0, 0, 0.2);
      border-radius: 10px;
      box-shadow: 0 10px 20px rgba(0, 0, 0, 0.2);
    }

    video {
      width: 100%;
      height: 100%;
      border-radius: 8px;
      box-shadow: 0 5px 15px rgba(0, 0, 0, 0.3);
      object-fit: cover;
    }

    /* Controles de video */
    #controls {
      position: fixed;
      bottom: 20px;
      display: flex;
      justify-content: center;
      gap: 15px;
      width: 100%;
    }

    .control-button {
      background: #4a5b76;
      border: none;
      color: #fff;
      padding: 10px 20px;
      border-radius: 8px;
      font-size: 16px;
      cursor: pointer;
      transition: background 0.3s;
    }

    .control-button:hover {
      background: #39485d;
    }

    .control-button:active {
      background: #2c3a4d;
    }

    .control-button.muted {
      background: #e63946;
    }

    .control-button.camera-off {
      background: #e63946;
    }
  </style>
</head>

<body>
  <div id="video-grid"></div>
</body>

</html>